---
import Layout from "../layouts/Layout.astro";
import Section from "../components/shared/section";
import Navbar from "../components/navbar";
import Footer from "../components/footer";
import WecomeContent from "../components/seiz-components/welcome-seiz-content";
import StepsContent from "../components/seiz-components/steps-content";
import SinseizContent from "../components/seiz-components/sinseiz-content";
import BenefitsContent from "../components/seiz-components/benefits-content";
import HowitworksContent from "../components/seiz-components/howitworks-content";
import DocumentContent from "../components/seiz-components/document-content";
import WhySeizContent from "../components/seiz-components/whyseiz-content";
---

<Layout title="Seiz">
  <main>
    <Section
      heightMode="h-screen"
      contentHeight="100%"
      background="backgrounds/seiz-background.png"
    >
      <Navbar />
      <WecomeContent />
    </Section>
    <Section
      heightMode="h-auto"
      contentHeight="410px"
      background="backgrounds/seiz-dots-background.png"
      backgroundColor="#F4F4F4"
    >
      <StepsContent />
    </Section>
    <Section 
      heightMode="h-auto" 
      contentHeight="100%" 
      background=""
      additionalBg="backgrounds/x-iso.png"
      additionalStyles={{
        backgroundRepeat: "no-repeat",
        backgroundPositionX: "right",
        backgroundSize: "initial",
        backgroundPositionY: "center"
      }}
    >
      <SinseizContent />
    </Section>
    <Section
      heightMode="h-auto"
      contentHeight="100%"
      background=""
      backgroundColor="#CCCCCC36"
    >
      <BenefitsContent />
    </Section>
    <Section
      heightMode="h-auto"
      contentHeight="100%"
      background="backgrounds/seiz-howitworks-background.png"
    >
      <HowitworksContent />
    </Section>
    <Section heightMode="h-auto" contentHeight="100%" background="">
      <DocumentContent client:load />
    </Section>
    <Section
      heightMode="h-auto"
      contentHeight="100%"
      background=""
      backgroundColor="#B5C71515"
    >
      <WhySeizContent />
    </Section>
    <Footer />
  </main>
</Layout>
