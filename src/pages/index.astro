---
import Layout from "../layouts/Layout.astro";
import Section from "../components/shared/section";
import Navbar from "../components/navbar";
import WelcomeContent from "../components/index-components/welcome-content";
import AboutContent from "../components/index-components/about-content";
import ProductsContent from "../components/index-components/products-content";
import FocusContent from "../components/index-components/focus-content";
import MagicalContent from "../components/index-components/magical-content";
import BrandContent from "../components/index-components/brand-content";
import TrustedContent from "../components/index-components/trusted-content";
import PublicationsContent from "../components/index-components/publications-content";
import Footer from "../components/footer";
---

<Layout title="Atix Digital">
  <main>
    <Section
      heightMode="h-screen"
      contentHeight="100%"
      background="backgrounds/welcome.png"
    >
      <Navbar />
      <WelcomeContent />
    </Section>
    <Section
      heightMode="h-auto"
      contentHeight="409px"
      background="backgrounds/dots.svg"
    >
      <AboutContent />
    </Section>
    <Section
      heightMode="h-fit"
      contentHeight="100%"
      backgroundColor="#FCFCFC"
      background=""
    >
      <ProductsContent />
    </Section>
    <Section
      heightMode="h-fit"
      contentHeight="940px"
      background="backgrounds/focus-background.png"
    >
      <FocusContent />
    </Section>
    <Section
      heightMode="h-auto"
      contentHeight="409px"
      background="backgrounds/magical-background.png"
    >
      <MagicalContent />
    </Section>
    <Section heightMode="h-auto" contentHeight="270px" background="">
      <BrandContent />
    </Section>
    <Section
      heightMode="h-auto"
      contentHeight="100%"
      background=""
      backgroundColor="#F8F8FA"
    >
      <TrustedContent />
    </Section>
    <Section heightMode="h-auto" contentHeight="100%" background="">
      <PublicationsContent />
    </Section>
    <Footer />
  </main>
</Layout>
